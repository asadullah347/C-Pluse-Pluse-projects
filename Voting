#include <iostream>
using namespace std;

void CanVote(int age ,bool citizen,bool registered)
{
  if(age >= 18 && citizen && registered)
  {
    cout << "You can vote!\n";
  }
  else if(age < 18 && citizen && registered)
  {
    cout << "You are not old enough to vote.\n";
  }
  else if(!citizen)
  {
    cout << "You are not eligible to vote.\n";
  }
  else if(!registered)
  {
    cout << "You need to register first.\n";
  }
}


int main() {
  int age;
  bool citizen, registered;

  cout << "Enter your age:";
  cin >> age;

  cout << "citizen: | Press 1(Yes) , 0(NO) | \n ->";
  cin >> citizen;

  cout << "registered: | Press 1(Yes) , 0(NO) | \n ->";
  cin >> registered;

  CanVote(age,citizen, registered);
  
}
