#include <iostream>
using namespace std;


int CatAge(int cAge)
{ 
  return (cAge - 2) * 4 + 24;
}


int main() {

  cout << "Welcome to the Cat Years program! This only works for cats older than 2 years old." << endl;
  cout << "\n" << "Enter your cat's age:";
  
  int cAge;
  cin >> cAge;

  //check for buges
  if (cAge < 2) {
        cout << "Sorry, this program only works for cats older than 2 years old.\n";
        return 0;
    }


  int hAge = CatAge(cAge);
  cout << "your cat is " << hAge << " years old in human years. \n";
  
  return 0;
}
