#include <iostream>
#include <vector>
#include <algorithm>
#include <random>
#include <ctime>
using namespace std;

int score = 0;


// Function declarations
void CheckAnswer(int correctAnswer);
void RandQuestions();

int main()
{
    srand(time(NULL));  // For any old-style random use (optional)
    RandQuestions();
    return 0;
}

void CheckAnswer(int correctAnswer)
{
    int userAnswer;
    cout << "\nYour answer: ";
    cin >> userAnswer;

    if (userAnswer == correctAnswer)
    {
        score++;
        cout << "You got it correct! [score:" << score << "]\n\n";
    }
        
    else
    {
        score--;
        cout << " I'm sorry, that's incorrect. [score:" << score << "]\n\n";

        switch (correctAnswer)
        {
        case 1:
             cout << "Correct Answer was 1.\n";
            break;
        case 2:
             cout << "Correct Answer was 2.\n";
        case 3:
             cout << "Correct Answer was 3.\n";
        case 4:
             cout << "Correct Answer was 4.\n";
            break;
        }
        

    }
}

void RandQuestions()
{
    // Vector containing question indexes (0â€“4)
    vector<int> questions = {0, 1, 2, 3, 4};

    // Create a random generator 
    random_device rd;
    mt19937 gen(rd());
    // Shuffle the questions vector (this randomizes the order of questions starting from index 0 to 4)
    shuffle(questions.begin(), questions.end(), gen);

    for (int i = 0; i < questions.size(); i++)
    {
        int q = questions[i]; // Current question index

        switch (q)
        {
            case 0:
                cout << "Q1) What is the name of the world's longest river? ðŸ’§\n"
                     << "1) Missouri River\n"
                     << "2) Nile\n"
                     << "3) Amazon River\n"
                     << "4) Yangtze River\n";
                CheckAnswer(2);
                break;

            case 1:
                cout << "Q2) How many bones are in the human body? ðŸ¦´\n"
                     << "1) 206\n"
                     << "2) 201\n"
                     << "3) 208\n"
                     << "4) 210\n";
                CheckAnswer(1);
                break;

            case 2:
                cout << "Q3) What food never spoils? ðŸ¯\n"
                     << "1) Honey\n"
                     << "2) Salt\n"
                     << "3) Sugar\n"
                     << "4) Rice\n";
                CheckAnswer(1);
                break;

            case 3:
                cout << "Q4) What is the name of the tallest grass on earth? ðŸŒ¾\n"
                     << "1) Wheat\n"
                     << "2) Bamboo\n"
                     << "3) Corn\n"
                     << "4) Sugarcane\n";
                CheckAnswer(2);
                break;

            case 4:
                cout << "Q5) How many dots are on a pair of dice? ðŸŽ²\n"
                     << "1) 21\n"
                     << "2) 36\n"
                     << "3) 42\n"
                     << "4) 48\n";
                CheckAnswer(3);
                break;
        }
    }

    cout << "ðŸŽ‰ All questions complete! Thanks for playing!\n";
    cout << "Your final score is: " << score << "\n";
}
